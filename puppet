$packages = ['vim-enhanced','curl','git','wget']
$scriptraw = ['wget https://raw.githubusercontent.com/melia31/Memory-Check/master/memory_check.sh']

class package_install {
  Package { ensure => 'installed' }

  package { 'vim': }
  package { 'curl': }
  package { 'git':   }


#Class for creating a user monitor
class user {

  user { 'monitor':
    ensure     => installed,
    home       => '/home/monitor',
    shell      => '/bin/bash',
    managehome => true,
       }
}

   # create a directory
class directory {
file { '/home/monitor/scripts':
    ensure => 'directory',
    owner  => 'monitor',
    group  => 'monitor',
    mode   => '755',
  }

     }
}

#Class for creating a directory /home/monitor/src
class directory_2 {
file { '/home/monitor/src':
    ensure => 'directory',
    owner  => 'monitor',
    group  => 'monitor',
    mode   => '755',
     }
}

#Class for getting the script in github
class script {
exec {'get_script':
  command => "/usr/bin/wget --no-check-certificate https://raw.githubusercontent.com/melia31/Memory-Check/master/memory_check.sh -O /home/monitor/scripts/check_memory",
  creates => "/home/monitor/scripts/memory_check",
    }
file{'/home/monitor/scripts/memory_check':
  mode => '755',
  require => Exec["get_script"],
   }
}

#Class for creating a softlink of check-memory
class softlink {
file { '/home/monitor/src/memory-check':
 ensure => link,
 target => '/home/monitor/scripts/memory-check'
     }
}

#Class for crontab of check_memory by using the created softlink
class crontab {
cron {'cron':
        command => "sh /home/monitor/src/memory-check -w 60 -c 90 -e rlutrania31@gamil.com",
        minute => '10',
        hour => '*',
        month => '*',
        weekday  => '*',
        monthday => '*',
}
}

#Class for node bpx.server.local
node 'bpx.server.local' {
 include 'package_install'
 include 'user'
 include 'directory'
 include 'directory_2'
 include 'script'
 include 'softlink'
 include 'crontab'
}
